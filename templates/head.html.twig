<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link rel>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('styles/content.css') }}">
        <style>
            .navbar {
                background-color: #1c1c1c !important; /* Fond de la barre de navigation */
            }
            .navbar a {
                color: #ffffff !important; /* Liens en blanc */
                text-decoration: none;
            }
            .navbar a:hover {
                color: #f8f9fa !important; /* Variation au survol */
            }
            
            /* Styles pour le menu déroulant */
            .navbar .nav-item.dropdown .dropdown-menu {
                background-color: #1c1c1c !important; /* Fond du menu déroulant */
                border: 1px solid #343a40 !important; /* Bordure sombre */
            }            .navbar .nav-item.dropdown .dropdown-item {
                color: #ffffff !important; /* Couleur des éléments du menu */
            }
            .navbar .nav-item.dropdown .dropdown-item:hover {
                background-color: #343a40 !important; /* Fond gris foncé au survol */
                color: #f8f9fa !important; /* Texte légèrement plus clair au survol */
            }
        </style>
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    {% endblock %}
</head>
{% block head %}
{% endblock %}
<body>
    {% block body %}
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href={{'/home'}}>MySymfonyApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        {% if app.user %}
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                {{ app.user.getUserIdentifier() }}
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="{{ path('app_profile') }}">Profil</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_logout') }}">Se déconnecter</a></li>
                            </ul>
                        {% else %}
                            <a class="nav-link dropdown-toggle" href="#" id="authDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Authentification
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="authDropdown">
                                <li><a class="dropdown-item" href="{{ path('app_register') }}">S'enregistrer</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_login') }}">Se connecter</a></li>
                            </ul>
                        {% endif %}
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href={{'/lucky'}}>Lucky</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{'/about'}}>About</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="articleDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Article
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="articleDropdown">
                            <li><a class="dropdown-item" href={{'/article'}}>Article</a></li>
                            <li><a class="dropdown-item" href={{'/article/new'}}>New</a></li>
                            <li><a class="dropdown-item" href={{'/article/generate'}}>Generate</a></li>
                            <li><a class="dropdown-item" href={{'/article/liste'}}>Liste</a></li>
                        </ul>
                    </li>
                </ul>
                <!-- Menu déroulant pour l'administration -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Administration
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                            <li><a class="dropdown-item" href="{{ path('admin_users') }}">Gestion des utilisateurs</a></li>
                            <li><a class="dropdown-item" href="{{ path('liste_article') }}">Gestion des articles</a></li>
                        </ul>
                    </li>
                
            </div>
        </div>
    </nav>
    {% endblock %}
</body>
</html>
