{# templates/profile/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<div class="head"> 
    {% include 'head.html.twig'%}
</div>
    <h1>Profile</h1>

    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword) }}
        <button class="btn btn-primary" type="submit">{{ form.submit.vars.label }}</button>
    {{ form_end(form) }}

    <hr>
    <a href="{{ path('profile_delete') }}" class="btn btn-danger">Delete Profile</a>
{% endblock %}
